@model Task_01.Models.ItemVM


<form asp-action="Insert" asp-controller="Items">
    <div class="row">
        <div class="col-8">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row mb-2">
                <div class="col-2">
                    <label asp-for="CategoryId" class="col-form-label"></label>:
                </div>
                <div class="col-5">
                    @Html.DropDownListFor(x => x.CategoryId, ViewBag.CategoryId as SelectList, "----------Select----------", new { @class = "form-control" })
                </div>
                <div class="col-4">
                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-2">
                <div class="col-2">
                    <label asp-for="ItemName" class="col-form-label"></label>:
                </div>
                <div class="col-5">
                    <input asp-for="ItemName" class="form-control form-control-sm" />
                </div>
                <div class="col-4">
                    <span asp-validation-for="ItemName" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-2">
                <div class="col-2">
                    <label asp-for="Status" class="col-form-label"></label>:
                </div>
                <div class="col-5 d-flex align-items-center">
                    <input asp-for="Status" class="form-check-input" style="width:20px;height:20px;" />
                </div>
                <div class="col-4">
                    <span asp-validation-for="Status" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-2">
                <div class="col-7 d-flex justify-content-end">
                    <input type="reset" value="Clear" class="btn btn-clear btn-sm " style="width:80px;" />
                    <input type="submit" value="Save" class="btn btn-save btn-sm ms-3" style="width:80px;" />
                </div>
            </div>
        </div>
    </div>
</form>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}